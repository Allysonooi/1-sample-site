<%= render 'adm_datatables_resource' %>

<div class="container">

  <p>Download
  <%= link_to "Excel", admin_home_path(format: "xls") %>
  </p>

  <div class="table-responsive">
    <table id="rctb"class="table table-bordered">
      <thead>
        <tr>
          <th>
            Id
          </th>
          <th>
            Email
          </th>
          <th>
            Coupon code
          </th>
        </tr>
      </thead>
      <tbody>
        <% Record.all.each do |r| %>
          <tr>
            <td>
              <%= r.id %>
            </td>
            <td>
              <%= r.email %>
            </td>
            <td>
              <%= r.coupon_code %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  $(document).ready(function(){
      $('#rctb').DataTable();
  });
</script>
