    <script>
      // To attach Backstrech as the body's background
      $.backstretch([
        '<%= asset_url('bg.jpg')%>',
        '<%= asset_url('bg1.jpg')%>',
        '<%= asset_url('bg2.jpg')%>',
        '<%= asset_url('bg3.jpg')%>'
      ], {duration: 3000, fade: 1800});

      jQuery(function(){
         jQuery('#submit_btn').click(function(){
               jQuery('#eps1').hide();
               jQuery('#eps2').show();
        });
      });


      var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
      var url1 = "<%= url_for(controller: 'static', action: 'ajax_submit_email') %>";
      $(document).on('click', '#submit_btn', function() {
        if(!$("#input_email").val().match(re)) {
          alert('Please enter a valid Email');
        }
        else{
           $.ajax({
             type: "POST",
             url: url1,
             data: {
               email: $("#input_email").val()
             },
             dataType: "script"
           });
        }
      });
    </script>
